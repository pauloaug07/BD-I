CREATE TABLE alunos (
	rm int(6) PRIMARY KEY NOT NULL,
	nome varchar(255) NOT NULL,
    idade int(3) NOT NULL
);

CREATE TABLE materias (
	id_materia int(6) PRIMARY KEY NOT NULL,
	materia varchar(255) NOT NULL,
    status_materia boolean NOT NULL
);

CREATE TABLE cursos (
	id_curso int(6) PRIMARY KEY NOT NULL,
	curso varchar(255) NOT NULL,
    status_curso boolean NOT NULL
);

CREATE TABLE atribuicao_alunos (
	´rmAtribuicaoA´ int(6) NOT NULL,
    ´id_cursoAtribuicaoA´ int(6) NOT NULL,
    PRIMARY KEY (´rmAtribuicaoA´,´id_cursoAtribuicaoA´)
);

CREATE TABLE atribuicao_materia (
	´id_cursoAtribuicaoM´ int(6) NOT NULL,
	´id_materiaAtribuicaoM´ int(6) NOT NULL,
    PRIMARY KEY (´id_cursoAtribuicaoM´,´id_materiaAtribuicaoM´)
);
